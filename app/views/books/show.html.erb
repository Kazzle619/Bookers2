<div class="left_side">
	<%= render 'users/template', {user: @user, book: @book} %>
</div>
<div class="right_side">
	<h1>Book detail</h1>
	<table>
		<tbody>
			<tr>
				<td>
					<%= link_to user_path(@user.id), user_id: @user.id do %>
						<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '20x20' %>
						<%= @user.name %>
					<% end %>
				</td>
				<td>@book_show.title</td>
				<td>@book_show.body</td>
				<% if @user.id == current_user.id %>
					<td><%= link_to "Edit", edit_book_path(@book_show.id) %></td>
					<td><%= link_to "Destroy", book_path(@book_show.id), method: :delete %></td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>