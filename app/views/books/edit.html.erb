<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>Editing Book</h2>
			<% if @book.errors.any? %>
				<div class="error_explanatation">
					<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3><br>

					<ul>
					<% @book.errors.full_messages.each do |msg| %>
						<li class="error_messages"><%= msg %></li>
					<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@book) do |f| %>
				<label>title</label>
				<%= f.text_field :title, style: "min-width: 100%;" %><br>
				<label>Opinion</label>
				<%= f.text_area :body, rows: "3", style: "min-width: 100%;" %><br>
				<%= f.submit "Update Book", class: "btn btn-block btn-primary" %><br>
			<% end %>
				<P><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></P>
		</div>
	</div>
</div>
