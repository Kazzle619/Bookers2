<div class="left_side">
	<%= render 'users/template', {user: @user, book: @book} %>
</div>
<div class="right_side">
	<h1>Users</h1>
	<table>
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '20x20' %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>