<div class="left_side">
	<%= render 'users/template', {user: @user, book: @book} %>
</div>
<div class="right_side">
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '20x20' %></td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>